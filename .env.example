# Variables de entorno para desarrollo local
# Copiar este archivo como .env y configurar los valores reales

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=24h

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (para verificaci√≥n S-13)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@futmanager.com

# Services Configuration
GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
TEAM_SERVICE_PORT=3002
SANCTION_SERVICE_PORT=3003
FRONTEND_PORT=3005

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fut_manager
DB_USER=postgres
DB_PASSWORD=your_password

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=1
VERIFICATION_CODE_EXPIRES_MINUTES=15

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3006

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# CORS Configuration
FRONTEND_URL=http://localhost:3005
ALLOWED_ORIGINS=http://localhost:3005,http://localhost:3000
